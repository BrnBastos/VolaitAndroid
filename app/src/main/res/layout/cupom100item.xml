            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewBackP"
            app:layout_constraintEnd_toEndOf="@+id/imageViewBackP"
            app:layout_constraintHorizontal_bias="0.217"
            app:layout_constraintStart_toStartOf="@+id/imageViewBackP"
            app:layout_constraintTop_toTopOf="@+id/imageViewBackP"
            app:layout_constraintVertical_bias="0.13" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semibold"
            android:text="Válido até 27 Ago 2022"
