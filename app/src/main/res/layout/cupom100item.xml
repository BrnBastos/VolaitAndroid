<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageViewBackP"
        android:layout_width="404dp"
        android:layout_height="127dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.349"
        app:srcCompat="@drawable/cupom_background_purple" />

    <ImageView
        android:id="@+id/btnCupomDetalhes"
        android:layout_width="98dp"
        android:layout_height="34dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBackP"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBackP"
        app:layout_constraintHorizontal_bias="0.964"
        app:layout_constraintStart_toStartOf="@+id/imageViewBackP"
        app:layout_constraintTop_toTopOf="@+id/imageViewBackP"
        app:layout_constraintVertical_bias="0.706"
        app:srcCompat="@drawable/saibamaisbtn" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="195dp"
        android:layout_height="56dp"
        android:fontFamily="@font/inter_semibold"
        android:text="R$ 100,00"
        android:textColor="@color/yellow_cupom"
        android:textFontWeight="900"
        android:textSize="38dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBackP"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBackP"
        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewBackP"
        app:layout_constraintVertical_bias="0.507" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="130dp"
        android:layout_height="25dp"
        android:fontFamily="@font/inter_semibold"
        android:text="Oferta de"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBackP"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBackP"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/imageViewBackP"
        app:layout_constraintTop_toTopOf="@+id/imageViewBackP"
        app:layout_constraintVertical_bias="0.107" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:text="Válido até 27 Ago 2022"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewBackP"
        app:layout_constraintEnd_toEndOf="@+id/imageViewBackP"
        app:layout_constraintHorizontal_bias="0.302"
        app:layout_constraintStart_toStartOf="@+id/imageViewBackP"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.233" />
</androidx.constraintlayout.widget.ConstraintLayout>